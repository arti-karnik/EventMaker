<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#giftModal">
  View GIFT REGISTRY 
</button>

<div class="modal fade" id="giftModal" tabindex="-1" class="modal-label" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"> VIEW Gift Registry</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      <table id="table-gift" style="width:100%"> 
              <thead>
                  <tr>
                      <th >Name  </th>
                      <th >URL </th>
                      <th > User </th>
                  </tr>
              </thead>
              <tbody class="modal-label">
                  {{#each gifts as |gift|}}
                      <tr>
                      
                      <td >
                          {{gift.name}}
                      </td>
                      <td >
                          {{gift.url}}
                      </td>
                      <td >
                        {{gift.user.firstname}} {{gift.user.lastname}}
                      </td>
                  </tr>
                  {{/each}}

              </tbody>
      </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

