<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>


<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#potluckModal">
  ADD POTLUCK ITEMS
</button>

<div class="modal fade" id="potluckModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add Potluck items</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <form>
        <input type="text" id="item1" placeholder="ENTER ITEM NAME">
        <input type="text" id="description" placeholder="ENTER DESCRIPTION">

        <input type="text" id="quantity" placeholder="ENTER QUANTITY">
    	<input type="button" class="add-row-potluck" value="Add Row">
</form>
<table id="table-potluck" style="width:100%"> 
        <thead>
            <tr>
                <th>Select </th>
                <th>Item-Name  </th>
                <th>Description  </th>
                <th>QUANTITY </th>
            </tr>
        </thead>
        <tbody>
        </tbody>
</table>
<button type="button" class="delete-row-potluck">Delete Row</button>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" id="savePotluck" data-dismiss="modal">Save changes</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>


