<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#giftModal">
  RSVP GIFT REGISTRY 
</button>

<div class="modal fade" id="giftModal" tabindex="-1" class="modal-label" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"> VIEW Gift Registry</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
         
<table id="table-gift" class="modal-label"  style="width:100%"> 
        <thead>
            <tr>
                <th >Select </th>
                <th >Name  </th>
                <th >URL </th>
            </tr>
        </thead>
        <tbody class="modal-label">
            {{#each gifts as |gift|}}
                <tr>
                <td>
                  {{#if gift.user_id}} 
                    <input type="radio" value='{{gift.id}}' name="rsvpGift" disabled="true">
                  {{else}}
                    <input type="radio" value='{{gift.id}}' name="rsvpGift" >
                  {{/if}}
                </td>
                <td >
                    {{gift.name}}
                </td>
                <td >
                    <a href={{gift.url}} target="_blank">Link </a>
                </td>
            </tr>
            {{/each}}

        </tbody>
</table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" id="saveGiftRSVP" data-dismiss="modal">Save changes</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

