<div class="container">
    <div class="row">
        <div class="col-md-12 min-vh-100 d-flex flex-column justify-content-center">
            <div class="row">
                <div class="col-lg-6 col-md-8 mx-auto">
                    <!-- form card login -->
                    <div class="card rounded shadow shadow-sm">
                        <div class="card-header">
                            <h3 class="mb-0">Create An Account </h3>
                        </div>
                        <div class="card-body">
                            <form class="form form-signup" onsubmit="return false">
                                <div class="form-group">
                                    <input class="form-input input-username-signup" type="text" minlength="6" maxlength="20" required="required" placeholder="Enter Username"/>
                                </div>
                                <div class="form-group">
                                    <input class="form-input input-email-signup" type="text" minlength="6"  required="required" placeholder="Enter Email"/>
                                </div>
                                <div class="form-group">
                                    <input class="form-input input-fname-signup" type="text"  required="required" placeholder="Enter First Name"/>
                                </div>
                                <div class="form-group">
                                    <input class="form-input input-lname-signup" type="text"  required="required" placeholder="Enter Last Name"/>
                                </div>
                                <div class="form-group">
                                    <input class="form-input input-address-signup" type="text" required="required" placeholder="Enter Address"/>
                                </div>
                                <div class="form-group">
                                    <input class="form-input input-phone-signup" type="text" required="required" placeholder="Enter Phone no"/>
                                </div>
                                <div class="form-group">
                                    <input class="form-input input-password-signup" type="password" minlength="8"  required="required" placeholder="Enter Password"/>
                                </div>
                                <div class="form-group">
                                    <input class="form-input input-confirm-password-signup" type="password" minlength="8" required="required" placeholder="Enter Confirm Password"/>
                                </div>
                                <div class="form-group">
                                    
                                    <button class="button btn-primary" type="submit" id="create-account">SignUp</button>
                                    <button class="button btn-primary">
                                        <a class="already-have-account-button button btn-primary" href="/login">Already have an
                                            account</a>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script type="text/javascript" src="https://code.jquery.com/jquery.min.js"></script>
<script src="../js/signup.js" type="text/javascript"></script>